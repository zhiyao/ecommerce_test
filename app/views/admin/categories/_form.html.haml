= form_for [:admin, category] do |f|
  .form-group.form-group-label
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group.form-group-label
    = f.label :position
    = f.number_field :position, class: 'form-control'

  .form-group.form-group-label
    = f.label :banner
    = f.file_field :banner

  = f.submit 'Save', class: 'btn btn-green'
  &nbsp;&nbsp;&nbsp;
  = link_to 'Cancel', admin_categories_path, class: 'btn-red btn-flat'
