= link_to 'Categories', admin_categories_path
= breadcrumbs(@category, @sub_category_parent)


= form_for [:admin, @category, @sub_category] do |f|
  = f.label :name
  = f.text_field :name
  %br

  = f.label :position
  = f.number_field :position
  %br

  = f.label :parent
  = f.collection_select :parent_id, SubCategory.all, :id, :name, { selected: @sub_category_parent_id }

  = f.submit
