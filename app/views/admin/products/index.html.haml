%h1 Admin

%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th Price
      %th Category
      %th
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.description
        %td= product.price
        %td= product.sub_category_name
        %td= link_to 'Edit', edit_admin_product_path(product)
        %td= link_to 'Destroy', admin_product_path(product),
          method: :delete,
          data: { confirm: "Are you sure?" }

= link_to 'New', new_admin_product_path
